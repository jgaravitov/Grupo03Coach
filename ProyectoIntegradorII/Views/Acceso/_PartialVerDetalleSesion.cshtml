@model ProyectoIntegradorII.Models.ModelosCustom.SesionInf

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<div class="modal fade" id="modalVerDetalle" data-bs-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h5 style="color: white; margin: 10px; font-family: lemon; text-align: center; text-shadow: black 0.1em 0.1em 0.2em; -webkit-text-stroke: 1px black;" class="modal-title w-100" id="exampleModalLongTitle">Detalle de Sesión</h5>
      </div>
      <div class="modal-body">
        <form asp-action="ActualizarComentarios">
          <input type="hidden" asp-for="id_sesion" value="@ViewBag.idsesion" />
          <input type="hidden" asp-for="id_servicio" value="@ViewBag.idservicio" />
          <div class="form-group">
            <label for="nombresApellidos">COACH: </label>
            <label asp-for="nombresApellidos">@ViewBag.coach</label>
          </div>
          <div class="form-group">
            <label for="fechasesion">Fecha de Sesión: </label>
            <label asp-for="fechasesion">@ViewBag.fecha</label>
          </div>
          <div class="form-group">
            <label for="precio">Precio: </label>
            <label asp-for="precio">USD @ViewBag.precio</label>
          </div>
          <div class="form-group">
            <label for="estado">Estado: </label>
            <label asp-for="checkint">@ViewBag.estado</label>
          </div>
          <div class="form-group">
            <label asp-for="comentario">Comentario: </label>
            <textarea class="form-control mb-2"  maxlength="200" rows="5" name="@Html.NameFor(m => m.comentario)" style="height: 90px; font-size: 12px; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;" autofocus>@ViewBag.comentario</textarea>
            @*<textarea asp-for="comentario" type="text" class="form-control" id="comentariotextarea" rows="5" style="height: 90px; font-size: 10px; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;" autofocus></textarea>*@
          </div>
          <hr />
          <div class="text-center">
            <button type="submit" class="btn btn-primary" style="text-shadow: black 0.1em 0.1em 0.2em;">Enviar</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="text-shadow: black 0.1em 0.1em 0.2em;" onClick = "cerrarModal()">Cerrar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
              
    function cerrarModal() {
        $('.modal').remove();
        $('.modal-backdrop').remove();
        $('body').removeClass( "modal-open" );
        location.reload();
    }
    
</script>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
