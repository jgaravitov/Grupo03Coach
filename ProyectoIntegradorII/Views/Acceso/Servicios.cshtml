      <h1 style="color: white; margin: 10px; font-family: lemon; text-align: center; text-shadow: black 0.1em 0.1em 0.2em; -webkit-text-stroke: 2px black;">Servicios</h1>
      <div style="color: black; margin: -30px; font-family: lemon; text-align: center; width: 110%; margin-top: 15px;">

      <table class="table table-light border rounded" style="box-shadow: 0 0 20px black; border-collapse: collapse; border-radius: 1em; overflow: hidden;">
        <thead >
            <tr>
                <th class="thcoach11" style="text-align: center; vertical-align: middle;">
                    @ViewBag.tipoU
                </th>
                <th class="thcoach12" style="text-align: center; vertical-align: middle;">
                    Tipo de Servicio
                </th>
                <th class="thcoach13" style="text-align: center; vertical-align: middle;">
                    Precio
                </th>
                <th class="thcoach14" style="text-align: center; vertical-align: middle;">
                    Cantidad de Sesiones
                </th>
                <th class="thcoach15" style="text-align: center; vertical-align: middle;">
                    Cantidad de Horas
                </th>
                <th class="thcoach16" style="text-align: center; vertical-align: middle;">
                    Tipo de Sesión
                </th>
                @if (User.IsInRole("Cliente"))
                {
                    <th class="thcoach15" style="text-align: center; vertical-align: middle;">
                        Estado
                    </th>
                    <th class="thcoach16" style="text-align: center; vertical-align: middle;">
                        @ViewBag.calificacion
                    </th>
                }
                @if (User.IsInRole("Coach"))
                {
                    <th class="thcoach15" style="text-align: center; vertical-align: middle;">
                        Estado
                    </th>
                    <th class="thcoach15" style="text-align: center; vertical-align: middle;">
                        Calificación
                    </th>
                }
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td class="thcoach21" style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.nombresApellidos)
                </td>
                <td class="thcoach22" style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.tiposervicio)
                </td >
                <td class="thcoach23" style="text-align: center; vertical-align: middle;">
                    USD @Html.DisplayFor(modelItem => item.precio)
                </td>
                <td class="thcoach24" style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.cantsesiones)
                </td>
                <td class="thcoach25" style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.canthoras)
                </td>
                <td class="thcoach26" style="text-align: center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.tiposesion)
                </td>
                @if (User.IsInRole("Cliente"))
                {
                    switch (item.checkint)
                    {
                        case "Aceptado":
                            <td class="thcoach24" style="text-align: center; vertical-align: middle;">
                                <p style="margin-top: 15px; color: white; text-shadow: 2px 2px 0 #008000, 2px -2px 0 #008000, -2px 2px 0 #008000, -2px -2px 0 #008000, 2px 0px 0 #008000, 0px 2px 0 #008000, -2px 0px 0 #008000, 0px -2px 0 #008000;"><strong>Aceptado</strong></p>
                            </td>
                        break;
                        case "Cancelado":
                            <td class="thcoach24" style="text-align: center; vertical-align: middle;">
                                <p style="margin-top: 15px; color: white; text-shadow: 2px 2px 0 red, 2px -2px 0 red, -2px 2px 0 red, -2px -2px 0 red, 2px 0px 0 red, 0px 2px 0 red, -2px 0px 0 red, 0px -2px 0 red;"><strong>Cancelado</strong></p>
                            </td>
                        break;
                        case "Pendiente":
                            <td class="thcoach24" style="text-align: center; vertical-align: middle;">
                                <p style="margin-top: 15px; color: white; text-shadow: 2px 2px 0 #3358FF, 2px -2px 0 #3358FF, -2px 2px 0 #3358FF, -2px -2px 0 #3358FF, 2px 0px 0 #3358FF, 0px 2px 0 #3358FF, -2px 0px 0 #3358FF, 0px -2px 0 #3358FF;"><strong>Pendiente</strong></p>
                            </td>
                            <td>

                            </td>
                        break;
                    }
                }
                @if (User.IsInRole("Coach"))
                {
                    switch (item.checkint)
                    {
                        case "Pendiente":
                            <td class="thcoach24" style="text-align: center; vertical-align: middle;">
                                <a asp-action="ActualizarServicios" asp-controller="Acceso" class="btn btn-success" style="padding-left: 18px; padding-right: 18px; margin-bottom: 10px;font-size: 14px; text-shadow: black 0.1em 0.1em 0.2em;" asp-route-idservicio="@item.id_servicio" asp-route-coachcheckint="Aceptado">Aceptar</a>
                                <a asp-action="ActualizarServicios" asp-controller="Acceso" class="btn btn-danger" style="font-size: 14px; text-shadow: black 0.1em 0.1em 0.2em;" asp-route-idservicio="@item.id_servicio" asp-route-coachcheckint="Cancelado">Rechazar</a>
                            </td>
                        break;
                    }
                }
                @if (User.IsInRole("Coach"))
                {
                    switch (item.checkint)
                    {
                        case "Aceptado":
                            <td class="thcoach24" style="text-align: center; vertical-align: middle;">
                                <p style="margin-top: 15px; color: white; text-shadow: 2px 2px 0 #008000, 2px -2px 0 #008000, -2px 2px 0 #008000, -2px -2px 0 #008000, 2px 0px 0 #008000, 0px 2px 0 #008000, -2px 0px 0 #008000, 0px -2px 0 #008000;"><strong>Aceptado</strong></p>
                            </td>
                        break;
                        case "Cancelado":
                            <td class="thcoach24" style="text-align: center; vertical-align: middle;">
                                <p style="margin-top: 15px; color: white; text-shadow: 2px 2px 0 red, 2px -2px 0 red, -2px 2px 0 red, -2px -2px 0 red, 2px 0px 0 red, 0px 2px 0 red, -2px 0px 0 red, 0px -2px 0 red;"><strong>Cancelado</strong></p>
                            </td>
                        break;
                    }
                }
                @if (User.IsInRole("Cliente"))
                {
                    switch (item.checkint){
                        case "Aceptado":
                            switch (item.nivelSatisfacion)
                            {
                                case "Ninguno":
                                    <td>
                                        @using(Html.BeginForm("CalificarCoach","Acceso"))
                                        {
                                            @Html.AntiForgeryToken()

                                            <div>
                                                <div style="visibility: hidden">
                                                    @Html.TextBox("id_servicio", @item.id_servicio)
                                                </div>
                                                <div style="margin-top: -30px; margin-bottom: 10px; font-size: 12px;">
                                                    @Html.DropDownList("idNivelSatisfacion", (IEnumerable<SelectListItem>)ViewBag.idNivelSatisfacion, new { @class = "p-1 ml-1 rounded-pill select-add-placeholderServicio dropdown-toggle dropdown-toggle-split" })
                                                </div>
                                                    <input style="font-size: 14px; text-shadow: black 0.1em 0.1em 0.2em;" type="submit" name="name" value="Calificar" class="btn btn-primary" />
                                            </div>
                                        }
                                    </td>
                                break;
                                default:
                                    <td style="text-align: center; vertical-align: middle;">
                                        <p style="text-shadow: gray 0.1em 0.1em 0.2em; margin-top: 15px; color: @item.color"><strong>@item.nivelSatisfacion</strong></p>
                                    </td>
                                break;
                            }
                            break;
                        case "Cancelado":
                            <td style="text-align: center; vertical-align: middle;">
                                <p style="text-shadow: gray 0.1em 0.1em 0.2em; margin-top: 15px; color: @item.color"></p>
                            </td>
                        break;
                    }
                }
                @if (User.IsInRole("Coach"))
                {
                    switch (item.nivelSatisfacion)
                    {
                        case "Ninguno":
                            <td style="text-align: center; vertical-align: middle;">
                                <p style="text-shadow: gray 0.1em 0.1em 0.2em; margin-top: 15px; color: @item.color; text-align: center; vertical-align: middle;" ><strong style="text-align: center; vertical-align: middle;">@item.nivelSatisfacion</strong></p>
                            </td>
                        break;
                        default:
                            <td style="text-align: center; vertical-align: middle;">
                                <p style="text-shadow: gray 0.1em 0.1em 0.2em; margin-top: 15px; color: @item.color; text-align: center; vertical-align: middle;" ><strong style="text-align: center; vertical-align: middle;">@item.nivelSatisfacion</strong></p>
                            </td>
                        break;
                    }           
                }
            </tr>
    }
        </tbody>
    </table>
    @if (ViewBag.contar != 0)
    {
        <div>
            @Html.ActionLink("|<","Servicios","Acceso",new{p=0},new{@class="btn btn-primary", @style="text-shadow: black 0.1em 0.1em 0.2em;"})
            @Html.ActionLink("<<","Servicios","Acceso",new{p=(@ViewBag.p<=0 ? 0 : @ViewBag.p-1)},new{@class="btn btn-primary", @style="text-shadow: black 0.1em 0.1em 0.2em;"})
            <em>@ViewBag.etiqueta</em>
            @Html.ActionLink(">>","Servicios","Acceso",new{p=(@ViewBag.p>=@ViewBag.npags-1 ? @ViewBag.npags-1 : @ViewBag.p+1)},new{@class="btn btn-primary", @style="text-shadow: black 0.1em 0.1em 0.2em;"})
            @Html.ActionLink(">|","Servicios","Acceso",new{p=@ViewBag.npags-1},new{@class="btn btn-primary", @style="text-shadow: black 0.1em 0.1em 0.2em;"})
        </div>
    }
    @if(ViewBag.contar == 0)
    {
        <label>No hay servicios asignados</label>               
    }
  </div>
