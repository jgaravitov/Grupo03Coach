                    switch (item.checkint)
                        {
                            case "Aceptado":
                                <td style="text-align: center; vertical-align: middle;">
                                    <a href="https://zoom.us/" target="_blank"><img src="~/imagenes/zoom.png" width="50" height="50"></a>
                                </td>
                                <td class="thcoach22" style="text-align: center; vertical-align: middle;">
                                    <div id="PlaceHolderHere"></div>
                                    <button style="margin-top: 7px; font-size: 14px; text-shadow: black 0.1em 0.1em 0.2em;" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalVerComentario" data-url="@Url.Action($"CoachVerComentario/{item.id_sesion}")">Ver</button>
                                </td>
                            break;
                        }
                }
            </tr>
    }
        </tbody>
    </table>
    @if(ViewBag.contar != 0){
    <div>
        @Html.ActionLink("|<","Sesiones","Acceso",new{p=0},new{@class="btn btn-primary", @style="text-shadow: black 0.1em 0.1em 0.2em;"})
        @Html.ActionLink("<<","Sesiones","Acceso",new{p=(@ViewBag.p<=0 ? 0 : @ViewBag.p-1)},new{@class="btn btn-primary", @style="text-shadow: black 0.1em 0.1em 0.2em;"})
