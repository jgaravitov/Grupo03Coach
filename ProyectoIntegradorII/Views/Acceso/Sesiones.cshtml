        @Html.ActionLink(">>","Sesiones","Acceso",new{p=(@ViewBag.p>=@ViewBag.npags-1 ? @ViewBag.npags-1 : @ViewBag.p+1)},new{@class="btn btn-primary", @style="text-shadow: black 0.1em 0.1em 0.2em;"})
        @Html.ActionLink(">|","Sesiones","Acceso",new{p=@ViewBag.npags-1},new{@class="btn btn-primary", @style="text-shadow: black 0.1em 0.1em 0.2em;"})
    </div>
    }
    @if(ViewBag.contar == 0){
      <div>
          <label>No tiene sesiones asignadas</label>
      </div>
    }
    

