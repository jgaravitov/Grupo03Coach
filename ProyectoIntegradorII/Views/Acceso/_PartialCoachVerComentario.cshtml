@model ProyectoIntegradorII.Models.ModelosCustom.SesionInf

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<div class="modal fade" id="modalVerComentario" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h5 style="color: white; margin: 10px; font-family: lemon; text-align: center; text-shadow: black 0.1em 0.1em 0.2em; -webkit-text-stroke: 1px black;" class="modal-title w-100" id="exampleModalLongTitle">Comentario</h5>
      </div>
      <div class="modal-body">
        <p style="color: black;">@ViewBag.comentario</p>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="text-shadow: black 0.1em 0.1em 0.2em;" onClick = "cerrarModal()">Cerrar</button>
      </div>
    </div>
  </div>
</div>

<script>
              
    function cerrarModal() {
        $('.modal').remove();
        $('.modal-backdrop').remove();
        $('body').removeClass( "modal-open" );
        location.reload();
    }
    
</script>

